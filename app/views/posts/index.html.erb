<p id="notice"><%= notice %></p>
<head>
<meta http-equiv="refresh" content="10">
</head>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Rest Players email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
      <tr>

        <td style="background-color: #<%=post.player.color%>"><%= post.content %></td>
        <td><%=post.player.email %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Commit your Chance', new_post_path,id: "new_link", remote: true %>